from pyspark.sql import SparkSession
spark = SparkSession.builder.appName("test_pyspark").getOrCreate()
df = spark.read.parquet("/content/green_tripdata_2021-02.parquet", header=True, inferSchema=True)
df

import pyspark
import pandas as pd
import numpy as np
